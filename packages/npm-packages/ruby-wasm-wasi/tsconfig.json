{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "emitDeclarationOnly": true,
    "module": "ES2015",
    "outDir": "./dist",
    "target": "es2017",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "./src/bindgen/*"],
  "exclude": ["node_modules", "dist"]
}
